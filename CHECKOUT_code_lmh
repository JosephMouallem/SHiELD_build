#!/bin/sh

. ${MODULESHOME}/init/sh
module load git

export SHiELD_SRC=${PWD%/*}/SHiELD_SRC/

mkdir -p ${SHiELD_SRC}
cd ${SHiELD_SRC}

release="202006"
fms_release="2020.04"
fv3_release="user/lmh_fvGFS_newnest"
phy_release="lmh_IPDv4"

git clone -b ${fv3_release}  https://gitlab.gfdl.noaa.gov/Lucas.Harris/atmos_cubed_sphere
git clone -b ${phy_release}  http://gitlab.gfdl.noaa.gov/Lucas.Harris/fv3_gfsphysics.git
git clone -b ${fms_release}  http://github.com/NOAA-GFDL/FMS

#Automatic release tracking from Matt M.
echo $release >& ../../release
